<!doctype html>
<html lang="en">
   <head>
      <title> Registration Page </title>
      <% include partials/head %>
   </head>
   <body>
    <% include partials/nav %>
        <div class="row mt-4">
            <div class="col-md-4 m-auto">
                <div class="card card-body">
                    <form action="/users/register" method="post" autocomplete="off">
                        <h2 style="margin-bottom: 22px;"> Create Account </h2>
                        <% include partials/messages %>
                        <div class="form-group">
                            <input type="first" id="first" name="first" placeholder="First Name" class="form-control" value="<%= typeof first != 'undefined' ? first : '' %>"/>
                        </div>
                        <div class="form-group">
                            <input type="last" id="last" name="last" placeholder="Last Name" class="form-control" value="<%= typeof last != 'undefined' ? last : '' %>"/>
                        </div>
                        <div class="form-group">
                            <input type="name" id="name" name="name" placeholder="Username" class="form-control" value="<%= typeof name != 'undefined' ? name : '' %>"/>
                        </div>
                        <div class="form-group">
                            <input type="email" id="email" name="email" placeholder="Email Address" class="form-control" value="<%= typeof email != 'undefined' ? email : '' %>"/>
                        </div>
                        <div class="form-group">
                            <input type="password" id="password" name="password" placeholder="Create Password" class="form-control" placeholder="At least 6 characters" value="<%= typeof password != 'undefined' ? password : '' %>"/>
                        </div>
                        <div class="form-group">
                            <input type="password" id="repeatedPassword" name="repeatedPassword" placeholder="Repeat Password" class="form-control" value="<%= typeof repeatedPassword != 'undefined' ? repeatedPassword : '' %>"/>
                        </div>
                        <button type="submit" class="btn"> Create Account </button>
                        <a class="btn" id="switch" href="/"> Sign In </a>
                        <br><br>
                    </form>
                </div>
            </div>
        </div>
   </body>
   <% include partials/footer %>
</html>